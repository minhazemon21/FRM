                    $.alert.open("Error", data.Message);
                }


            },
            error: function (request, status, error) {
                $("#AjaxLoader").hide();
                alert(request.statusText + "/" + request.statusText + "/" + error);
            }
        });
    }

    function LeaveMailSend(EmployeeId, LeaveId) {
        $("#AjaxLoader").show();
