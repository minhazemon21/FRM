            var department = $("#ddldepartmentList").val();
            var companyList = $("#ddlCompanyList").val() == "" ? "0" : $("#ddlCompanyList").val();

            var EmployeeList = $("#EmpOfficeCode").val() == "" ? "0" : $("#EmpOfficeCode").val();
            var StartDate = $("#txtDateFrom").val();
            var EndDate = $("#txtDateTo").val();
            if (reportNo == 1) {
