@using Hrms.Controllers
@{
    ViewBag.Title = "Investment";
    Layout = "~/Views/Shared/_LayoutUcasportfolio.cshtml";
    var investmentExpense = (List<PFController.PFModel>)ViewBag.InvestmentExpense;
}

<style>
    .ui-autocomplete {
        cursor: pointer;
        height: 400px;
        width: 300px;
        overflow-y: scroll;
        background-color: white;
        color: rgb(0,188,212);
        /*outline-style:outset;*/
    }

    .bordercss {
        border: 3px double #CCCCCC;
        color: black;
    }

        .bordercss:focus {
            box-shadow: 0 0 5px rgba(81, 203, 238, 1);
            border: 2px solid rgba(81, 203, 238, 1);
        }

    .required::after {
        content: " *";
        color: red;
    }

    .k-grouping-header {
        background-color: #1ABB9C;
    }

    #tblEmpList {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #tblEmpList td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #tblEmpList tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #tblEmpList tr:hover {
            background-color: #ddd;
        }

        #tblEmpList th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4CAF50;
            color: white;
        }

    .childTbl th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: red;
        color: white;
    }
</style>
<script type="text/javascript">

    function ExpenseEdit(Id, ExpenseName) {

        $("#hdnExpenseId").val(Id);
        $("#txtExpenseName").val(ExpenseName);
    }


    $(document).ready(function () {

        $("#btnSave").on("click", function () {

            var expenseId = $("#hdnExpenseId").val();
            var expenseName = $("#txtExpenseName").val();

            if (expenseName == "") {
                $.alert.open("error", "Please insert expense name.");
                return false;
            }
            else {
                $('#AjaxLoader').show();
                $.ajax({
                    type: 'POST',
                    contentType: "application/json; charset=utf-8",
                    url: '@Url.Action("InsertExpenseName", "PF", "http")',
                    data: JSON.stringify({
                        ExpenseId: expenseId,
                        ExpenseName: expenseName,
                    }),
                    dataType: 'json',
                    async: true,
                    success: function (data) {
                        $('#AjaxLoader').hide();
                        if (data.Status == true) {
                            $("#hdnSaleId").val(0);
                            $.alert.open(data.Result, data.Message, function () { window.location = "@Url.Action("ExpenseEntry", "PF")"; });
                        }
                        else {
                            $.alert.open(data.Result, data.Message);
                        }
                    },
                    error: function (request, status, error) {
                        $('#AjaxLoader').hide();
                        alert(request.statusText + "/" + request.statusText + "/" + error);
                    }
                });
            }
        });
    });

</script>

<div class="">
    <div id="AjaxLoader" class="ajaxLoader"></div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <div class="page-title">
                        <div class="title_left PageHeader" style="width:90%;">
                            <h3 style="color: white;padding:2px">&nbsp;Expense Entry Form</h3>
                        </div>
                    </div>
                </div>
                <div class="x_content">
                    <fieldset>
                        <form class="form-horizontal form-label-left">
                            <div class="row form-group">
                                <label class="control-label col-md-2 required">Expense Name</label>
                                <div class="col-md-4 col-sm-6 col-xs-12">
                                    <input type="text" class="form-control" id="txtExpenseName" />
                                    <input type="hidden" id="hdnExpenseId" value="0"/>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-4 col-sm-6 col-xs-12">
                                </div>
                                <div class="col-md-4 col-sm-6 col-xs-12">
                                    <button type="submit" class="btn btn-success" id="btnSave">Save</button>
                                </div>
                            </div>
                        </form>
                    </fieldset>
                    <br />
                    <fieldset>
                        <div class="row form-group">
                            <table id="tblEmpList">
                                <thead>
                                    <tr>
                                        <th>&nbsp; Sl</th>
                                        <th>Expense name</th>
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var r in investmentExpense)
                                    {
                                        <tr>
                                            <td>@r.RowSl</td>
                                            <td>@r.ExpenseName</td>
                                            <td><a href="#" title="Edit" onclick="ExpenseEdit(@r.Id,'@r.ExpenseName')" class="btn btn-info btn-xs"> <i class="fa fa-caret-square-o-down"></i></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>

