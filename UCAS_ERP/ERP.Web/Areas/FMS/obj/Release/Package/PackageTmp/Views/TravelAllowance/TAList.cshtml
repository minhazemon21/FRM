@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUcasportfolio.cshtml";
    var userId = (int)ViewBag.UserId;
    var RoleId = SessionHelper.LoggedIn_RoleId;
}

<style type="text/css">
