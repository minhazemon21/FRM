</style>
<script type="text/javascript">
    $(document).ready(function () {
        var empId = @userId;
        console.log(empId)
        GetTABilllInInformation();
    });
    function ApprovedBy(InvoiceNo) {
        $.alert.open('confirm', 'Are you sure you want to Approved this Invoice?', function (button) {
            if (button == 'yes') {
                $.ajax({
                    type: 'GET',
                    contentType: "application/json; charset=utf-8",
                    url: '@Url.Action("ApprovedInvoice", "TravelAllowance", "http")',
                    data: { InvoiceNo: InvoiceNo },
                    dataType: 'json',
                    async: true,
                    success: function (data) {
                        if (data.Status == true) {

                            // GetEmployeeLeaveInfoForProcess();
                            $.alert.open("Success", data.Message, function () {
                                window.location.reload();
                            });
                        }
                        else {
                            $.alert.open("Error", data.Message);
                        }
                    },
                    error: function (request, status, error) {
                        alert(request.statusText + "/" + request.statusText + "/" + error);
                    }
                });
                return true;
            }
            else {
                return false;
            }
        });
    }

    function Rejected(InvoiceNo) {
        $.alert.open('confirm', 'Are you sure you want to Reject this Invoice?', function (button) {
            if (button == 'yes') {
                $.ajax({
                    type: 'GET',
                    contentType: "application/json; charset=utf-8",
                    url: '@Url.Action("RejectInvoice", "TravelAllowance", "http")',
                    data: { InvoiceNo: InvoiceNo },
                    dataType: 'json',
                    async: true,
                    success: function (data) {
                        if (data.Status == true) {

                            // GetEmployeeLeaveInfoForProcess();
                            $.alert.open("success", data.Message, function () {
                                window.location.reload();
                            });
                        }
                        else {
                            $.alert.open("Error", data.Message);
                        }
                    },
                    error: function (request, status, error) {
                        alert(request.statusText + "/" + request.statusText + "/" + error);
                    }
                });
                return true;
            }
            else {
                return false;
            }
        });
    }
    function GetTABilllInInformation() {

        $("#AjaxLoader").show();
        $.ajax({
            contentType: "application/json; charset=utf-8",
            url: '@Url.Action("GetTAInInformation", "TravelAllowance", "http")',
            type: "GET",
            dataType: 'json',
            async: true,
            data: {},
            success: function (data) {
                if (data.Status == true) {
                    $("#tblStoreList").find('tbody').empty();
                    $.each(data.Result, function (id, r) {
                        var approvedButton = '';
                        var rejectedButopn = '';
                        var editButton = '';
                        var printButton = '';
                        var roleid = @RoleId;
                        if (roleid == 3) {
                            if (r.IsApproved == 2) {
                                approvedButton = 'Approved';
                                rejectedButopn = '';
                            }
                            else if (r.IsApproved == 3) {
                                approvedButton = '';
                                rejectedButopn = 'Rejected';
                            }
                            else {
                                editButton = '<a href="/Hrms/TravelAllowance/TAEdit?Invoice=' + r.InvoiceNo + '&with=' + r.WithAssistance + '"  title="Edit" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>';
                                approvedButton = '<a href="#" onclick="ApprovedBy(' + r.InvoiceNo + ')" title="Approved"  class="btn btn-primary btn-xs"><i class="fa fa-check" aria-hidden="true"></i></a>';
                                rejectedButopn = '<a href="#" onclick="Rejected(' + r.InvoiceNo + ')" title="Reject"  class="btn btn-danger btn-xs"><i class="fa fa-close" aria-hidden="true"></i></a>';

                            }
                        }
                        else {
                            if (r.IsApproved == 2) {
                                editButton = '';
                                printButton = '<a href="/Hrms/TravelAllowance/ShowTAReportforInvoice?InvoiceNo=' + r.InvoiceNo + '" title="Print"  class="btn btn-info btn-xs" target="_blank"><i class="fa fa-print"></i></a>';
                            }
                            else {
                                editButton = '<a href="/Hrms/TravelAllowance/TAEdit?Invoice=' + r.InvoiceNo + '&with=' + r.WithAssistance +'"  title="Edit" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>';
                                printButton = '<a href="/Hrms/TravelAllowance/ShowTAReportforInvoice?InvoiceNo=' + r.InvoiceNo + '" title="Print"  class="btn btn-info btn-xs" target="_blank"><i class="fa fa-print"></i></a>';

                            }
                        }


                        $("#tblStoreList").find('tbody').append(
                            '<tr>' +
                            '<td>' + r.InvoiceNo + '</td>' +
                            '<td>' + r.emp_name + '</td>' +
                            '<td>' + r.Amount + '</td>' +
                            '<td>' + editButton +
                            approvedButton +
                            rejectedButopn +
                            printButton +

                            '</td>' +
                            '</tr>'
                        );
                    });
                    $("#AjaxLoader").hide();
                }
                else {
                    $("#AjaxLoader").hide();
                    $.alert.open("error", data.Message);
                }
            },
            error: function (error) {
                $("#AjaxLoader").hide();
                $.alert.open("error", "An error occurred. Please contact to the vendor.");
            }
        });
    }




</script>

<div id="AjaxLoader" class="ajaxLoader"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                &nbsp; Travel Allowance Bill List
                <a href="@Url.Action("Index", "TravelAllowance")" class="btn btn-primary btn-sm pull-right" style="background-color: #44c7f4">Add New</a>
            </div>
            <div class="panel-footer">
                <fieldset>
                    <div class="row form-group">
                        <table id="tblStoreList" style="text-align:center">
                            <thead>
                                <tr>
                                    <th>Invoice No</th>
                                    <th>Employee Name</th>
                                    <th>Amount</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </fieldset>

            </div>
        </div>
    </div>
</div>


