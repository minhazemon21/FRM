        // var paid = parseFloat($("#paid-" + EmpCode).val() == "" ? "0" : $("#paid-" + EmpCode).val());
        var newPayable = payable - absAmt;

        if (absAmt <= payable) {
            $("#pay-" + EmpCode).html(newPayable);

            $("#paid-" + EmpCode).val(newPayable);


            pay = 0;
            $(".cltotPaid").each(function () {
