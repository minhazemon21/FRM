$('#txtNID').on('keypress', function (event) {
    var regex = new RegExp("^[0-9]+$"); // Only allow numeric characters
    var key = String.fromCharCode(!event.charCode ? event.which : event.charCode);
    
    // If the key is not a number, prevent the default action (i.e., not allowing non-numeric input)
    if (!regex.test(key)) {
        event.preventDefault();
        return false;
    }

    // Restrict input to 10 or 17 digits (max length check)
    var currentValue = $(this).val();
    if (currentValue.length >= 17) {
        event.preventDefault();
        return false;
    }

    return true;
});

$('#txtNID').on('input', function () {
    var currentValue = $(this).val();

    // Check if the length of the input is either 10 or 17 digits
    if (currentValue.length !== 10 && currentValue.length !== 17) {
        // Optionally, you can display a message or highlight the input if the length is invalid
        $(this).addClass('is-invalid');
    } else {
        $(this).removeClass('is-invalid');
    }
});


.is-invalid {
    border-color: red;
    background-color: #f8d7da;
}